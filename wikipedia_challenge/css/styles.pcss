:root {
	--banner-color-primary: #ff9a50;
	--banner-color-secondary: #ffffff;
	--banner-color-outline: #919191;
	--banner-color-black: #202122;
	--banner-color-white: #ffffff;
	--banner-color-pink: #c7006b;
	
}




/*
 Common rules, mobile-first
 */
.challenge-banner {
	font-family: 'Montserrat', 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif;
	z-index: 101;
	width: 100%;
	background-image: url(//upload.wikimedia.org/wikipedia/commons/6/6a/30_Tage_Wiki_Banner_320x350_Backroundpic.jpg);
    background-size: cover;
	background-position: top left;
    background-repeat: no-repeat;
    	
	text-align: center;
	overflow: hidden;
	/*height: 350px;*/
	
	.mobile-break {
		display: block;
	}
	display: none;
	position: relative;
	a {
		text-decoration: none;
	}
	
	&-inner {
		box-sizing: border-box;
		height: 100%;
		text-align: left;
		width: 100%;
	}
	&-space {
		width: 100%;
		height: 21px;
	}
	
	&-title {
		margin-left: 7.8%; 
		margin-right: 70px;
		margin-top: 21px;
		color: var( --banner-color-white );
		font-family: 'Montserrat', 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif;
		font-size: 6.25vw; 
		font-weight: 700;
		font-stretch: normal;
		font-style: normal;
		line-height: 120%;
		letter-spacing: normal;
	}
	&-banner {
		color: var( --banner-color-white );
		width: 77%;
		margin-left: 7.8%; 
		margin-top: 25px;
		font-family: 'Source Serif Pro Regular', 'Georgia', 'Times', 'Times New Roman', serif;
		font-size: 7.5vw; 
		font-weight: normal;
		font-stretch: normal;
		font-style: normal;
		line-height: 120%;
		letter-spacing: normal;
		
		&-highlight {
			background-color: var( --banner-color-pink );
		}
		
	}
	&-button {
		font-family: 'Montserrat', 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif;
		/*font-size: 20px;*/
		font-weight: bold;
		font-stretch: normal;
		font-style: normal;
		background-color: var( --banner-color-white );
		color: var( --banner-color-black );
		padding-top: 5px;
		padding-bottom: 5px;
		text-align: center;
		min-width: 64%;
		font-size: 6.25vw; 
		position: static;
		float: right;
		margin-right: 14px;
		margin-top: 29px;
		margin-bottom: 27px;
	}
	&-close {
		background: transparent url( '//upload.wikimedia.org/wikipedia/commons/1/1e/Close_Button.png' ) no-repeat center/60%;
		background-size: cover;
		cursor: pointer;
		position: absolute;
		z-index: 1002;
		width: 30px;
		height: 30px;
		right: 14px;
		top: 21px;
		a {
			display: inline-block;
			width: 30px;
			height: 30px;
		}
	}

	&-nt {
		.challenge-banner-button {
			background-image: url( '//upload.wikimedia.org/wikipedia/commons/2/27/Button1-s%402x.png' );
		}
	}
}

/*
 Set a maximum font size
 */
@media ( min-width: 480px ) and ( max-width: 599px ) {
	.challenge-banner {
		&-title {
			font-size: 30px;
		}
		&-banner {
			font-size: 40px;
		}
		&-button {
			font-size: 30px;
		}
	}
}


