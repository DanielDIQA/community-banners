:root {
	--banner-color-primary: #ff9a50;
	--banner-color-secondary: #ffffff;
	--banner-color-outline: #919191;
	--banner-color-black: #202122;
	--banner-color-white: white;
}

/*
 Common rules, mobile-first
 */
.author-banner {
	font-family: Arial, Helvetica, sans-serif;
	z-index: 101;
	width: 100%;
	background-color: var( --banner-color-primary );
	text-align: center;
	overflow: hidden;
	height: 400px;
	display: none;
	position: relative;
	a {
		text-decoration: none;
	}
	.mobile-break {
		display: block;
	}
	&-inner {
		box-sizing: border-box;
		display: relative;
		height: 100%;
		text-align: left;
		width: 100%;
	}
	&-space {
		width: 100%;
		height: 25px;
	}
	&-title {
		
		margin-right: 60px; /* 5 + 30 + 25 */
		color: var( --banner-color-white );
		font-size: x-large;
		
		height: 72px;
		margin-left: 25px;
		margin-top: 0px;
	}
	&-banner {
		color: var( --banner-color-black );
		font-size: x-large;
		margin-right: 25px;
		
		height: 119px;
		margin-left: 25px;
		margin-top: 33px; 
	}
	&-illustration {
		position: absolute;
		left: 0px;
		right: unset;
		bottom: 24px; 
		background: transparent url( '//upload.wikimedia.org/wikipedia/commons/a/a1/Illustration-s%402x.png' ) no-repeat bottom left;
		background-size:contain;
		width: 180px;
		height: 110px;
	}
	&-button {
		position: absolute;
		right: 14px;
		bottom: 37px;
		background: transparent url( '//upload.wikimedia.org/wikipedia/commons/9/9c/Button2-s%402x.png' ) no-repeat center center;
		background-size:contain;
		width: 146px;
		height: 60px;
	}
	&-close {
		background: transparent url( '//upload.wikimedia.org/wikipedia/commons/b/b7/Close%402x.png' ) no-repeat center/60%;
		background-size:contain;
		cursor: pointer;
		position: absolute;
		z-index: 1002;
		width: 30px;
		height: 30px;
		right: 25px;
		top: 25px;
	}
}
.skin-minerva {
	.author-banner {
		&-inner {
			
		}
	}
}

/*
 Tablet and larger devices
 */
@media ( min-width: 600px ) {
	.author-banner {
		/*border-bottom: 1px solid var( --banner-color-primary );*/
		height: 390px;
		
		&-inner {
		}
		&-space {
			width: 100%;
			height: 30px;
		}
		&-title {
			
			margin-right: 65px; /* 5 + 30 + 30 */
			font-size: xx-large;
			
			height: 52px;
			margin-left: 30px;
		}
		&-banner {
			
			font-size: xx-large;
			margin-right: 30px;
			
			height: 110px;
			margin-left: 30px;
			margin-top: 38px; 
		}
		&-illustration {
			bottom: 0px; 
			background: transparent url( '//upload.wikimedia.org/wikipedia/commons/1/15/Illustration-m%402x.png' ) no-repeat bottom left;
			background-size:contain;
			width: 330px;
			height: 138px;
		}
		&-button {
			right: 27px;
			bottom: 31px;
			background: transparent url( '//upload.wikimedia.org/wikipedia/commons/c/ca/Button2-m%402x.png' ) no-repeat center center;
			background-size:contain;
			width: 176px;
			height: 65px;
		}
		&-close {
			right: 30px;
			top: 30px;
		}
	}
	.skin-minerva {
		.author-banner {
			&-text {
				width: auto;
			}
		}
	}
}

/*
 Desktop devices (1200px width and above, minus scroll bar)
 */
@media ( min-width: 1200px ) {
	.author-banner {
		height: 240px;
		
		&-inner {
		}
		&-space {
			width: 100%;
			height: 40px;
		}
		&-title {
			
			margin-right: 80px; /* 10 + 30 + 40 */
			
			height: 30px;
			margin-left: 40px;
		}
		&-banner {
			
			margin-right: 390px;
			
			height: 79px;
			margin-left: 40px;
			margin-top: 50px; 
		}
		&-illustration {
			right: 0px;
			left: unset;
			background: transparent url( '//upload.wikimedia.org/wikipedia/commons/b/bc/Illustration-l%402x.png' ) no-repeat bottom left;
			background-size:contain;
			width: 350px;
			height: 203px;
		}
		&-button {
			right: 37px;
			bottom: 33px;
			background: transparent url( '//upload.wikimedia.org/wikipedia/commons/5/52/Button2-l%402x.png' ) no-repeat center center;
			background-size:contain;
			width: 209px;
			height: 70px;
		}
		&-close {
			right: 40px;
			top: 40px;
		}
	}
}

